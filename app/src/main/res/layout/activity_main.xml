<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="devmob.ftce.usjt.br.paises.MainActivity">

    <Spinner
        android:id="@+id/continenes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:entries="@array/continentes_array"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/botao_listar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_listar"
        android:onClick="listarPaises"/>

</LinearLayout>
